<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<fx:root fx:id="borderPane" type="BorderPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
            <content>
            <BorderPane fx:id="imageViewContainer">
               <center>
                        <ImageView fx:id="pdfImageView" pickOnBounds="true" preserveRatio="true" />
               </center>
            </BorderPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" maxHeight="25.0" minHeight="25.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="prevButton" focusTraversable="false" mnemonicParsing="false" text="◀" />
                <Label fx:id="pageLabel" prefHeight="26.0" text="Label">
                    <padding>
                        <Insets left="7.0" right="7.0" />
                    </padding>
                </Label>
                <Button fx:id="nextButton" focusTraversable="false" mnemonicParsing="false" text="▶" />
            </children>
        </HBox>
    </bottom>

</fx:root>
